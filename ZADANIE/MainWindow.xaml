<Window x:Class="ZADANIE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZADANIE"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Frame Content="Frame" Height="343" VerticalAlignment="Top" Margin="0,91,0,0"/>
        <StackPanel Grid.Row = "0" Background="Brown" Orientation="Horizontal" Height="91" VerticalAlignment="Top">
            <Image Source="/Image1.png" Stretch="Fill" Width="95" Height="86"/>
            <Label x:Name ="lbl" Content="Вычисление корней" FontSize="32" Width="360"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Name="Sqr" Content="Квадратное уравненеие" Height="224" Click="Sqr_Click" />
            <Button Name="Lin" Content="Линейное уравнение" Height="220" />
        </StackPanel>
    </Grid>
</Window>
